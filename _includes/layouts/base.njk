<!doctype html>
<html lang="en" id="html">
<head id="head">
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ title or metadata.title }}</title>
	<meta name="description" content="{{ description or metadata.description }}">

	{%- for fonts in fontcss -%}
	<link rel="stylesheet" href="{{ fonts }}">
	{%- endfor %}
	<link rel="stylesheet" href="{{ '/css/css.css' | url }}">
	{%- if episodecss %}<link rel="stylesheet" href="/css/{{ episodecss }}">{% endif %}
	<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }} RSS Feed">
	<link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }} JSON Feed">
</head>
<body id="body"{% if episodeClass %} class="{{ episodeClass }}"{% endif %}>

<header>
	<h1><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
</header>

<main{% if templateClass %} class="{{ templateClass }}"{% endif %}>

	{{ content | safe }}
</main>

<footer id="context">
	<h2>Meta information</h2>
	<nav id="nav">
		<h2>Elsewhere on this website</h2>
		<ul class="nav">
			<li><a href="/">Home</a></li>
			<li><a href="/about/">About</a></li>
   		</ul>
	</nav>
</footer>
	
	
<!-- Current page: {{ page.url | url }} -->
</body>
</html>
